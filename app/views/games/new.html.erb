
    <div class = text-center>
      <h1 class=mb-3>NEW GAME</h1>
      <ul class="justify-content-center text-center list-group list-group-horizontal">
    <%@letters.each do |letter|%>
      <li class="list-group-item list-group-item-primary m-1 rounded-2 border-1 fs-2 mb-3"><%=letter.upcase%></li>
    <%end%>
  </ul>

<p>What is the longest word you can find ??</p>
    <form action="/score" data-turbo="false" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @letters %>
      <input type="text" name="word">
      <input type="submit" value="Play!">
    </form>

</div>
